{% if site.host == 'jobinge.be' %}
	{% set template = ':jobinge:base.html.twig' %}
{% else %}
	{% set template = ':aees:base.html.twig' %}
{% endif %}

{% extends template %}

{% block sonata_page_body_tag %}
	{{ parent() }}
{% endblock %}

{% block sonata_page_javascripts %}
	{{ parent() }}
{% endblock %}

{% block page_header_bottom %}
	{{ sonata_page_render_container('header', page) }}
{% endblock %}

{% block page_content %}




	<div class="row">
		<div class="col-md-8">
			{% if content is defined %}
				{{ content|raw }}
			{% else %}
				{% set content = block('content') %}
				{% if content|length > 0 %}
					{{ content|raw }}
				{% elseif page is defined %}
					{{ sonata_page_render_container('content', page) }}
				{% endif %}
			{% endif %}
		</div>
		<aside class="col-md-4">
			{{ sonata_page_render_container('aside', page) }}
		</aside>
	</div>

{% endblock %}