{% extends '@JOBINGEForum/cv/base.html.twig' %}

{% block title %}
	Trié par nom
{% endblock %}
{% block menu %}
	<ul class="navbar-nav">

		<li class="first"><a href="/index.html" class="nav-link">Accueil</a>
		</li>


		<li><a href="/pages/parFormation.html" class="nav-link">Trié par formation</a>
		</li>


		<li class="active"><a href="/pages/parNom.html" class="nav-link">Trié par nom</a>
		</li>


	</ul>
{% endblock %}

{% block content %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="/index.html" title="Accueil">
				Accueil
			</a>
		</li>
		<li class="breadcrumb-item active">

			Trié par Nom

		</li>
	</ol>

	<h1 class="text-center">
		CV-Book du Forum Entreprises de l'AEES - Uliège 2018, trié par nom

	</h1><br>
	<div id="accordion">


		<div class="card border-dark">

			<div class="card-body">

				<table class="table table-striped table-sm">
					<thead class="thead-dark">
					<tr>
						<th scope="col">Nom</th>
						<th scope="col">Prénom</th>
						<th scope="col">Mail</th>
						<th scope="col">Formation</th>
						<th scope="col">LinkedIn</th>
						<th scope="col">CV</th>
					</tr>
					</thead>
					<tbody>
					{% for etudiant in etudiants %}

						<tr>
							<th scope="row">{{ etudiant.nom|upper }}</th>
							<td>{{ etudiant.prenom }}</td>
							<td>
								{% if etudiant.newsletter %}
									<a href="mailto:{{ etudiant.email }}">{{ etudiant.email }}</a>
								{% endif %}
							</td>
							<td>{{ etudiant.master }}</td>
							<td>
								{% if etudiant.linkedIn is not empty %}
									{% if "http://" in etudiant.linkedIn or "https://" in etudiant.linkedIn %}
										<a class="btn btn-info btn-sm" href="{{ etudiant.linkedIn }}" target="_blank">LinkedIn</a>

									{% else %}
										<a class="btn btn-info btn-sm" href="//{{ etudiant.linkedIn }}"
										   target="_blank">LinkedIn</a>

									{% endif %}

								{% else %}
									<a class="btn btn-outline-info btn-sm disabled" disabled="">LinkedIn</a>
								{% endif %}
							</td>
							<td><a class="btn btn-dark btn-sm" href="{{ etudiant.cv }}" target="_blank">Ouvrir</a>
							</td>
						</tr>
					{% endfor %}

					</tbody>
				</table>
			</div>
		</div>

		<hr>


	</div>
{% endblock %}