<div class="btn-group">

	{% if admin.hasAccess('edit', object) and admin.hasRoute('edit') %}
		<a href="{{ admin.generateObjectUrl('edit', object) }}" class="btn btn-sm btn-default" title="Éditer">
			<i class="fa fa-pencil"></i>
		</a>
	{% endif %}

	{% if object.status == 1 %}
		<a href="{{ admin.generateObjectUrl('contract', object) }}" target="_blank" class="btn btn-sm btn-primary"
		   title="Génerer le contrat">
			<i class="fa fa-calculator" aria-hidden="false"></i>
		</a>
	{% elseif object.status >= 3 %}
		{% if object.confirmProfile %}
			<a class="btn btn-sm btn-info" target="_blank" href="{{ admin.generateObjectUrl('brochure', object) }}"
			   title="Génerer la brochure">
				<i class="fa fa-book" aria-hidden="false"></i>
			</a>
		{% else %}
			<a class="btn btn-sm btn-info disabled" href="#" title="Génerer la brochure">
				<i class="fa fa-book" aria-hidden="false"></i>
			</a>
		{% endif %}
	{% endif %}

</div>