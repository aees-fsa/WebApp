{% if isInscrit %}
	<div class="card border-success mb-3">
		<div class="card-body text-success">
			<h4 class="card-title">{% trans %}jobinge.companies.account.inscriptions.yes{% endtrans %}</h4>
		</div>
	</div>
{% else %}
	<div class="card border-warning mb-3">
		<div class="card-body text-warning">
			<h4 class="card-title">{% trans %}jobinge.companies.account.inscriptions.no{% endtrans %}</h4>
			<a class="btn btn-warning" href="{{ path('jobinge.accountEntreprises.registrations.new') }}">{% trans %}
					jobinge.register{% endtrans %}</a>
		</div>
	</div>
{% endif %}
{% if company.inscriptions is defined and company.inscriptions is not null %}
	<table class="table table-striped">
		<thead class="thead-inverse">
		<tr>
			<th>{% trans %}jobinge.companies.account.inscriptions.dossier{% endtrans %}</th>
			<th>{% trans %}jobinge.companies.account.inscriptions.nom{% endtrans %}</th>
			<th>{% trans %}jobinge.companies.account.inscriptions.status{% endtrans %}</th>
		</tr>
		</thead>
		<tbody>

		{% for inscription in company.inscriptions %}
			<tr>
				<th>{{ inscription.identifier }}</th>
				<th>{{ inscription.forum.nom }}</th>
				<th>{{ inscription.statusString }}</th>
			</tr>
		{% endfor %}

		</tbody>
	</table>
{% endif %}