<script>

    $('#clock').countdown('2016/11/24 20:00:00').on('update.countdown', function (event) {
        var $this = $(this).html(event.strftime(''
              + '<div class="col-xs-2"><span class="label label-primary">%-w</span> <p>semaine%!w</p></div> '
              + '<div class="col-xs-2"><span class="label label-primary">%-d</span> <p>jour%!d</p></div> '
              + '<div class="col-xs-2"><span class="label label-primary">%H</span> <p>heures</p></div> '
              + '<div class="col-xs-2"><span class="label label-primary">%M</span> <p>minutes</p></div> '
              + '<div class="col-xs-2"><span class="label label-primary">%S</span> <p>secondes</p></div>'));
    });


</script>
</body>
</html>
