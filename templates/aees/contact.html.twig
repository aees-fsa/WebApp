<h2>Formulaire de contact</h2>

{% for flash_message in app.session.flashBag.get('success') %}
	<div class="alert alert-danger" role="alert">
		{{ flash_message }}
	</div>

{% endfor %}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

{{ form_errors(form) }}

<div class="form-group">
	{{ form_label(form.email, "Votre email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}


	<div class="col-sm-10">
		{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.email) }}
	</div>
</div>
<div class="form-group">

	{{ form_label(form.subject, "Sujet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}


	<div class="col-sm-10">
		{{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.subject) }}
	</div>
</div>
<div class="form-group">
	{{ form_label(form.message, "Votre message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}


	<div class="col-sm-10">
		{{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
		{{ form_errors(form.message) }}
	</div>
</div>

<div class="form-group">

	<div class="col-sm-offset-2 col-sm-10">
		{{ form_widget(form.submit, {'attr': {'class': 'btn btn-default'}}) }}
	</div>
</div>


{{ form_rest(form) }}

{{ form_end(form) }}